{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="image-holder"><img src="{{ asset('images/logo.png') }}"></div>
<div class="logo" >NFQ Akademija</div>
<!-- LOGIN FORM -->
<div id="notToShow">
    <div class="text-center" style="padding:70px 0">
        <div class="login">Prisijungti</div>
        <!-- Main Form -->
        <div class="login-form-1">

            <form id="login-form" class="text-left" action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label for="lg_username" class="sr-only">Username</label>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="lg_password" class="sr-only">Password</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                        </div>
                        <div class="form-group login-group-checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                            <label for="lg_remember">Prisiminti mane</label>
                        </div>
                    </div>
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                    {#<button type="submit" id="_submit" class="login-button"><i class="fa fa-chevron-right"></i></button>#}
                </div>
            </form>
        </div>
    </div>
</div>



