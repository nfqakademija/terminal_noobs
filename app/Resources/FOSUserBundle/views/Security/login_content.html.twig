{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="image-holder"><img src="{{ asset('images/logo.png') }}"></div>
<!-- LOGIN FORM -->
<div id="notToShow">
    <div class="content">
        <div class="form-wrapper">
            <div class="linker">

                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
            </div>
                <form class="login-form" id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="El. paštas"/>
                    <input type="password"  id="password" name="_password" required="required" placeholder="Slaptažodis"/>
                <input type="submit" id="_submit" name="_submit" value="{{ 'Prisijungti'|trans }}"/>
                    <div class="checkbox-remember-me">
                        <input class="text-muted"  type="checkbox" id="lg_remember" name="lg_remember">
                        <label class="text-muted"  for="lg_remember">Prisiminti mane</label>
                    </div>
            </form>


        </div>
        <div class="label-forgot-password">
            <p class="text-muted">Pamiršote staptažodį?<a class="text-muted" class="press-here" onclick="showReminder(2);notToShow()" href="#">spausti čia</a></p>
        </div>
    </div>
</div>

<div id="showReminder" style='display: none'>
    <div class="content">
        <div class="form-wrapper">
            <div class="linker">

                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
                <span class="ring"></span>
            </div>
            <form class="login-form" id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="El. paštas"/>
                <input type="submit" id="_submit" name="_submit" value="{{ 'Priminti'|trans }}"/>
            </form>
        </div>
        <div class="label-forgot-password">
            <p class="text-muted">Prisiminėte slaptažodį?<a class="text-muted" class="press-here" href="/login">prisijungti</a></p>
        </div>
    </div>
</div>



