{% extends "::base.html.twig" %}

{% block title %}AppBundle:Attendance:show{% endblock %}

{% block body %}
<h1>Welcome to the Attendance:show page</h1>
    <article class="article">
        <br>
        <h1 class="acenter">{{ workshop.title }} lankomumas</h1><br>
        <table class="table table-striped table-hover ">
            <thead>
            <tr class="table-header">
            <th>Studentas</th><th>Lankomumas</th>
            </tr>
            </thead>

            <tbody>
            {% for attendance in attendances %}
                <tr>
                    <td>{{ attendance.student.name }}</td>

                    <td><input type="checkbox" id="checkbox" checked=true  disabled = "enabled">
                        <label for="checkbox"></label></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </article>

{% endblock %}
