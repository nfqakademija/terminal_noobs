{% extends "::base.html.twig" %}

{% block title %}AppBundle:Attendance:show{% endblock %}

{% block body %}
    <article class="article">
        <br>
        <h1 class="acenter">{{ workshop.title }} lankomumas</h1><br>
        <table class="table table-striped table-hover ">
            <thead>
            <tr class="table-header">
            <th>Studentas</th><th>Lankomumas</th>
            </tr>
            </thead>

            <tbody>
            {% for attendance in attendances %}
                <tr>
                    <td>{{ attendance.student.name }}</td>
                    {% if attendance.present %}
                    <td><input type="checkbox" id="checkbox" checked>
                        <label for="checkbox"></label></td>
                    {% else %}
                    <td><input type="checkbox" id="checkbox">
                        <label for="checkbox"></label></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </article>

{% endblock %}
