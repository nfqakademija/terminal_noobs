{% extends "::base.html.twig" %}

{% block title %}AppBundle:Attendance:show{% endblock %}

{% block body %}
<h1>Welcome to the Attendance:show page</h1>


    <article class="article">
        <br>
        <h1 class="acenter">Lankomumas</h1><br>
        <button class="btn btn-default"  onclick="EnableChekboxes()">Edit</button>
        <button class="btn btn-default"  onclick="DisableCheckboxes()">Save</button>
        <table class="table table-striped table-hover ">
            <thead>
            <tr class="table-header">
                {{ workshop.title }}
            </tr>
            </thead>

            <tbody>
            {% for attendance in attendances %}
                <tr>
                    <td>{{ attendance.student.name }}</td>

                    <td><input type="checkbox" id="checkbox" checked=true  disabled = "disabled">
                        <label for="checkbox"></label></td>

                </tr>

            {% endfor %}
            </tbody>
        </table>
    </article>

{% endblock %}
