{% extends "::base.html.twig" %}

{% block title %}AppBundle:Attendance:list{% endblock %}

{% block body %}
    <article class="article">
        <br>
        <h1 class="acenter">Lankomumas</h1><br>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
            <th>Studentas / Paskaita</th>
            {% for workshop in workshops %}
            <th width="10%">{{ workshop.title }}</th>
            {% endfor %}
            </tr>
            </thead>

            <tbody>



            {% for i in workshops[0].attendance %}
                <tr>
                    <td>{{ workshops[0].attendance[loop.index0].student.name }}</td>
                    {% for workshop in workshops %}
                        {% if workshop.attendance[loop.parent.loop.index0].present %}
                            <td><input type="checkbox" id="checkbox" checked>
                                <label for="checkbox"></label></td>
                        {% else %}
                            <td><input type="checkbox" id="checkbox">
                                <label for="checkbox"></label></td>
                        {% endif %}
                    {% endfor %}



                </tr>
            {% endfor %}
            </tbody>
        </table>
    </article>
{% endblock %}
