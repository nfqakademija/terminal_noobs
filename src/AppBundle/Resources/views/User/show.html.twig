{% extends "::base.html.twig" %}

{% block title %}NFQ Akademija{% endblock %}

{% block body %}
<article class="article user-list">
    <br><h1>Profilis</h1><br>

    <br>
    <br>
    <table class="table table-hover">
        <thead>
        <tr class="table-header">
            <th>Vardas, Pavardė</th>
            <th>Username</th>
            <th>El. paštas</th>
            <th>Rolė</th>
            <th>Aktyvumas</th>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
            {% if user.getName ==  app.user.Name  %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td class="to-lowercase">
                    {% for role in user.roles %}
                        {{ role }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>{% if user.enabled %}
                        aktyvus
                    {% else %}
                        neaktyvus
                    {% endif %}
                </td>
             </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}
