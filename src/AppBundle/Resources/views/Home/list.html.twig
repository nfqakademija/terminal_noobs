{% extends '::base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-6">
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Is active</th>
                    </tr>
                    {% for lector in lectors %}
                        {% if lector.active  %}
                        <tr>
                            <td>{{ lector.id }}</td>
                            <td>{{ lector.name }}</td>
                            <td>{{ lector.active }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
            <div class="col-sm-6 col-lg-6">
                <a href="{{ path('lector_new') }}" class="btn btn-bg">Add new</a>
            </div>
        </div>
    </div>

{% endblock %}