{% extends "::base.html.twig" %}

{% block title %}NFQ Lentelės{% endblock %}

{% block body %}
    <div class="container">
        {% include "::inc/navGeras.html.twig" %}

        <article class="article">
            <br>
            <h1 class="acenter">Pažymiai</h1><br>

                <table class="table table-hover">
                    <thead>
                    <tr class="table-header">
                        <th><!--Vardas, Pavardė--></th>
                        <th>Dizainas</th>
                        <th>Planavimas</th>
                        <th>MySQL</th>
                        <th>GitHub</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for team in grades.teams %}
                        <tr>
                            <td><b>{{ team.name }}</b></td>
                            <td><input min="0" max="10" step="1" maxlength="2" size="2" value="" ></td>
                        </tr>
                        {% for member in team.members %}
                            <tr>

                                <td>{{ member.name }}</td>
                                {% for grade in member.grades %}
                                    <td><input type="integer" min="0" max="10" step="1" maxlength="2" size="2" value="{{ grade }}" ></td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        <td></td>
                    {% endfor %}
                    </tbody>
                </table>



            </form>
        </article>
    </div>

{% endblock %}